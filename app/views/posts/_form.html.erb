<% if @post.errors.any? %>
  <div id="error_explaination"> 
    <h4 style="color: red">
      <%= pluralize(@post.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li style="color: red"><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div>
  <%= form_for @post do |f| %>
    <p><%= f.label :title %></p>
    <p><%= f.text_field :title %></p>
    <p><%= f.label :content %></p>
    <p><%= f.text_area :content %></p>
    <p><%= f.label :blogger_id %></p>
    <p><%= f.collection_select :blogger_id, Blogger.all, :id, :name %></p>
    <p><%= f.label :destination_id %></p>
    <p><%= f.collection_select :destination_id, Destination.all, :id, :name %></p>
    <p><%= f.submit %></p>
  <% end %>
</div>