<h1>New Blogger Form</h1>

<% if flash[:my_errors]%>
    <%flash[:my_errors].each do |error|%>
        <%= error %>
    <% end %>
<% end %>

<%= form_for @blogger do |f|%>
    <%= f.label :name%>
    <%= f.text_field :name%> <br>

    <%= f.label :bio%>
    <%= f.text_area :bio%> <br>

    <%= f.label :age %>
    <%= f.number_field :age%> <br>
    <h3>Create Your First Post</h3><br>
    <%= f.fields_for :posts do |p|%>
        <%=p.label :title%>
        <%=p.text_field :title%> <br>

        <%=p.label :content%>
        <%=p.text_area :content%> <br>

        <%= p.label :likes %>
        <%= p.number_field :likes%>

        <%= p.collection_select :destination_id, Destination.all, :id, :name%>

    <% end %>

<%= f.submit%>

<% end %>    